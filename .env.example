# Telegram Bot Configuration
TG_BOT_TOKEN=
ADMIN_IDS=

# TeamTalk Server Configuration
HOST_NAME=
PORT=
UDP_PORT= # Optional: if same as PORT, can be left blank or same value. If different, specify.
USER_NAME=
PASSWORD=
NICK_NAME=RegisterBot
CLIENT_NAME=PyTalkRegisterBot
ENCRYPTED=0 # 0 for false (default), 1 for true
SERVER_NAME=My TeamTalk Server

# Registration Settings
VERIFY_REGISTRATION=0 # 0 for auto-approval (Telegram), 1 for admin verification (Telegram)
LANG=en # Bot's default language for admin/internal messages. Use language codes e.g., "en" for English, "ru" for Russian.

# Web Application (FastAPI) Configuration (Optional)
WEB_REGISTRATION_ENABLED=0 # 0 to disable, 1 to enable (Renamed from FLASK_REGISTRATION_ENABLED)
WEB_APP_HOST=0.0.0.0 # Host for the web application (Renamed from FLASK_HOST)
WEB_APP_PORT=5000 # Port for the web application (Renamed from FLASK_PORT)
# FLASK_SECRET_KEY=default_secret_key_please_change # This key is not directly used by FastAPI in the same way as Flask sessions.
                                                 # If custom session middleware needing a secret is added to FastAPI, configure it appropriately.

# Web Application SSL (Optional) - Only if WEB_REGISTRATION_ENABLED=1
WEB_APP_SSL_ENABLED=0 # 0 to disable, 1 to enable (Renamed from FLASK_SSL_ENABLED)
WEB_APP_SSL_CERT_PATH= # Path to SSL certificate (Renamed from FLASK_SSL_CERT_PATH)
WEB_APP_SSL_KEY_PATH=  # Path to SSL private key (Renamed from FLASK_SSL_KEY_PATH)

# TeamTalk Client Template for Web Downloads (Optional) - Only if WEB_REGISTRATION_ENABLED=1
# Path to a directory containing the unzipped TeamTalk client files (e.g., the 'TeamTalk 5 Setup' folder).
# The application will look for 'Client/TeamTalk5.ini' (or 'Client/teamtalk5.ini') inside this directory to modify for user-specific ZIPs.
TEAMTALK_CLIENT_TEMPLATE_DIR=

# Generated File Time-To-Live (Optional)
# How long (in seconds) generated .tt files and client ZIPs should be available for download.
# Defaults to 600 seconds (10 minutes) if not set.
GENERATED_FILE_TTL_SECONDS=600