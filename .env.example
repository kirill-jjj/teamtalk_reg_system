FLASK_SSL_ENABLED=0 # 0 to disable, 1 to enable
FLASK_SSL_CERT_PATH=
FLASK_SSL_KEY_PATH=

# TeamTalk Client Template for Flask Downloads (Optional) - Only if FLASK_REGISTRATION_ENABLED=1
